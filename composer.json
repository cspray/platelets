{
    "name": "cspray/platelets",
    "description": "A native templating library that encourages composition to make exactly the Renderer you need.",
    "license": "MIT",
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/cspray/phpunit-mock-objects"
        }
    ],
    "require": {
        "php": ">=5.4",
        "zendframework/zend-escaper": "2.3.*",
        "cspray/adhoc": "~0.1"
    },
    "require-dev": {
        "phpunit/phpunit": "4.7.*",
        "phpunit/phpunit-mock-objects": "dev-master",
        "league/event": "~2.1"
    },
    "suggest": {
        "league/event": "To support the EventTriggeringRenderer"
    },
    "autoload": {
        "psr-0": {
            "Cspray\\Platelets\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-0": {
            "Cspray\\Platelets\\Test": "test/"
        }
    }
}
